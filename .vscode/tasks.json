{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Backend",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "compile"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/src/Backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "mvn",
      "args": ["spring-boot:run"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/src/Backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test Backend",
      "type": "shell",
      "command": "mvn",
      "args": ["test"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/src/Backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
